<?xml version="1.0" encoding="UTF-8"?>
<simulation>

  <context id = "diagnostics">

   <calendar type = "Gregorian" start_date = "2016-01-01 15:00:00" />

   <axis_definition>
    <axis id="vert_axis_half_levels" name="half_levels"/>
    <axis id="vert_axis_full_levels" name="full_levels"/>
    <axis id="radiation_levels" name="radiation_levels"/>
    <axis id="model_vert_axis_1_half_levels" n_glo="3" name="half_levels_copy"
          positive="up" unit="m" value="(0, 2) [0.5 1.5 2.5]"/>
    <axis id="fixed_vert_axis_1" n_glo="3" name="fixed_axis"
          positive="up" unit="m" value="(0, 2) [10.5 11.5 12.5]"/>
    <axis id="mutable_categories" label="(0, 2) [b g r]" n_glo="3" name="mutable_categories"/>
    <axis id="mutable_numbers" label="(0, 1) [1 2]" n_glo="2"
          name="mutable_numbers" unit="other units"/>
    <axis id="immutable_categories" label="(0, 2) [a b c]" n_glo="3" name="immutable_categories"/>
    <axis id="immutable_numbers" label="(0, 2) [1 2 3]" n_glo="3"
          name="immutable_numbers" unit="other units"/>
   </axis_definition>

   <grid_definition>
    <grid id="node_grid">
      <domain domain_ref="node"/>
      <axis axis_ref="vert_axis_full_levels"/>
    </grid>
    <grid id="half_level_face_grid">
      <domain domain_ref="face"/>
      <axis axis_ref="vert_axis_half_levels"/>
    </grid>
    <grid id="full_level_face_grid">
      <domain domain_ref="face"/>
      <axis axis_ref="vert_axis_full_levels"/>
    </grid>
      <grid id="half_level_edge_grid">
      <domain domain_ref="edge"/>
      <axis axis_ref="vert_axis_half_levels"/>
    </grid>
    <grid id="model_vert_axis_1_half_levels__face_grid">
      <domain domain_ref="face" />
      <axis axis_ref="model_vert_axis_1_half_levels" />
    </grid>
    <grid id="fixed_vert_axis_1__face_grid">
      <domain domain_ref="face" />
      <axis axis_ref="fixed_vert_axis_1" />
    </grid>
    <grid id="mutable_categories__face_grid">
      <domain domain_ref="face"/>
      <axis axis_ref="mutable_categories"/>
    </grid>
    <grid id="mutable_numbers__face_grid">
      <domain domain_ref="face"/>
      <axis axis_ref="mutable_numbers"/>
    </grid>
    <grid id="immutable_categories__immutable_numbers__face_grid">
      <domain domain_ref="face"/>
      <axis axis_ref="immutable_categories"/>
      <axis axis_ref="immutable_numbers"/>
    </grid>
   </grid_definition>

    <field_definition prec="8">
      <field_group enabled=".TRUE." freq_op="1ts"
                   id="colours__diagnostics"
                   operation="instant">
        <field grid_ref="fixed_vert_axis_1__face_grid"
               id="colours__hex"
               standard_name="hex" unit="arbitrary units">
          <variable name="checksum" type="bool">false</variable>
          <variable name="element_order" type="int">0</variable>
          <variable name="field_type" type="string">REAL_TYPE</variable>
          <variable name="function_space" type="string">W3</variable>
          <variable name="io_driver" type="string">WRITE_FIELD_FACE</variable>
          <variable name="mesh_id" type="int">1</variable>
        </field>
      </field_group>
      <field_group enabled=".TRUE." freq_op="1ts"
                   id="colours__non_spatial"
                   operation="instant">
        <field grid_ref="mutable_categories__face_grid"
               id="colours__mutable_categories"
               standard_name="mutable_categories" unit="arbitrary units">
          <variable name="checksum" type="bool">false</variable>
          <variable name="element_order" type="int">0</variable>
          <variable name="field_type" type="string">REAL_TYPE</variable>
          <variable name="function_space" type="string">W3</variable>
          <variable name="io_driver" type="string">WRITE_FIELD_FACE</variable>
          <variable name="mesh_id" type="int">1</variable>
        </field>
        <field grid_ref="mutable_numbers__face_grid"
               id="colours__mutable_numbers"
               standard_name="mutable_numbers" unit="arbitrary units">
          <variable name="checksum" type="bool">false</variable>
          <variable name="element_order" type="int">0</variable>
          <variable name="field_type" type="string">REAL_TYPE</variable>
          <variable name="function_space" type="string">W3</variable>
          <variable name="io_driver" type="string">WRITE_FIELD_FACE</variable>
          <variable name="mesh_id" type="int">1</variable>
        </field>
        <field grid_ref="immutable_categories__immutable_numbers__face_grid"
               id="colours__immutable_both"
               standard_name="immutable_both" unit="arbitrary units">
          <variable name="checksum" type="bool">false</variable>
          <variable name="element_order" type="int">0</variable>
          <variable name="field_type" type="string">REAL_TYPE</variable>
          <variable name="function_space" type="string">W3</variable>
          <variable name="io_driver" type="string">WRITE_FIELD_FACE</variable>
          <variable name="mesh_id" type="int">1</variable>
        </field>
      </field_group>
      <field_group enabled=".TRUE." freq_op="1ts"
                   id="colours__prognostics"
                   operation="instant">
        <field grid_ref="fixed_vert_axis_1__face_grid" id="colours__blue"
               standard_name="blue" unit="1">
          <variable name="checksum" type="bool">false</variable>
          <variable name="element_order" type="int">0</variable>
          <variable name="field_type" type="string">REAL_TYPE</variable>
          <variable name="function_space" type="string">W3</variable>
          <variable name="io_driver" type="string">WRITE_FIELD_FACE</variable>
          <variable name="mesh_id" type="int">1</variable>
        </field>
        <field grid_ref="fixed_vert_axis_1__face_grid" id="colours__green"
               standard_name="green" unit="1">
          <variable name="checksum" type="bool">false</variable>
          <variable name="element_order" type="int">0</variable>
          <variable name="field_type" type="string">REAL_TYPE</variable>
          <variable name="function_space" type="string">W3</variable>
          <variable name="io_driver" type="string">WRITE_FIELD_FACE</variable>
          <variable name="mesh_id" type="int">1</variable>
        </field>
        <field grid_ref="model_vert_axis_1_half_levels__face_grid" id="colours__red"
               standard_name="red" unit="1">
          <variable name="checksum" type="bool">false</variable>
          <variable name="element_order" type="int">0</variable>
          <variable name="field_type" type="string">REAL_TYPE</variable>
          <variable name="function_space" type="string">W3</variable>
          <variable name="io_driver" type="string">WRITE_FIELD_FACE</variable>
          <variable name="mesh_id" type="int">1</variable>
        </field>
      </field_group>
    </field_definition>
    <file_definition par_access="collective" time_counter="none"
                     type="one_file">
      <file convention="UGRID" enabled=".TRUE." id="Prognostics"
            name="Prognostics" output_freq="1ts">
        <field field_ref="colours__red"
               name="colours__red__instant_1ts"
               operation="instant"/>
        <field field_ref="colours__green"
               name="colours__green__instant_1ts"
               operation="instant"/>
        <field field_ref="colours__blue"
               name="colours__blue__instant_1ts"
               operation="instant"/>
      </file>
      <file convention="UGRID" enabled=".TRUE." id="Diagnostics"
            name="Diagnostics" output_freq="1ts">
        <field field_ref="colours__hex"
               name="colours__hex__instant_1ts"
               operation="instant"/>
      </file>
      <file convention="UGRID" enabled=".TRUE." id="NonSpatialDimensions"
            name="NonSpatialDimensions" output_freq="1ts">
        <field field_ref="colours__mutable_categories"
               name="colours__mutable_categories__instant_1ts"
               operation="instant"/>
        <field field_ref="colours__mutable_numbers"
               name="colours__mutable_numbers__instant_1ts"
               operation="instant"/>
        <field field_ref="colours__immutable_both"
               name="colours__immutable_both__instant_1ts"
               operation="instant"/>
      </file>
    </file_definition>

  </context>

  <context id = "xios">
    <variable_definition>
      <variable_group id = "buffer">
        <variable id = "optimal_buffer_size" type = "string" >performance</variable>
        <variable id = "buffer_factor_size" type = "double" >1.0</variable>
      </variable_group>

      <variable_group id = "parameters" >
        <variable id = "using_server" type = "bool" >true</variable>
        <variable id = "info_level" type = "int" >50</variable>
        <variable id = "print_file" type="bool">true</variable>
      </variable_group>
    </variable_definition>
  </context>

</simulation>
