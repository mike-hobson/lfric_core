<field_definition prec="8">

  <!-- Lateral boundary conditions diagnostic group -->
  <field_group id="lbc_diags" freq_op="1ts" operation="instant" enabled=".TRUE." >
    <field id="lbc_u1" name="lbc_u1" long_name="eastward_wind" standard_name="eastward_wind" unit="m s-1" grid_ref="half_level_edge_grid" />
    <field id="lbc_u2" name="lbc_u2" long_name="northward_wind" standard_name="northward_wind" unit="m s-1" grid_ref="half_level_edge_grid" />
    <field id="lbc_u3" name="lbc_u3" long_name="upward_air_velocity" standard_name="upward_air_velocity" unit="m s-1" grid_ref="full_level_face_grid" />
    <field id="lbc_theta" name="lbc_theta" long_name="air_potential_temperature" standard_name="air_potential_temperature" unit="K" grid_ref="full_level_face_grid" />
    <field id="lbc_m_v" name="lbc_m_v" long_name="m_v"  unit="kg kg-1" grid_ref="full_level_face_grid" />
    <field id="lbc_q" name="lbc_q" long_name="m_v"  unit="kg kg-1" grid_ref="full_level_face_grid" />
    <field id="lbc_rho" name="lbc_rho" long_name="air_density" standard_name="air_density" unit="kg m-3" grid_ref="half_level_face_grid" />
    <field id="lbc_rho_r2" name="lbc_rho_r2" long_name="air_density" standard_name="air_density" unit="kg m-3" grid_ref="half_level_face_grid" />
    <field id="lbc_exner" name="lbc_exner" long_name="exner_pressure" unit="1" grid_ref="half_level_face_grid" />
    <field id="readlbc_h_u" name="h_wind" long_name="horizontal_wind" unit="m s-1" grid_ref="half_level_edge_grid"/>
    <field id="readlbc_v_u" name="upward_wind" long_name="vertical_wind" standard_name="vertical_wind" unit="m s-1" grid_ref="full_level_face_grid"/>
    <field id="readlbc_h_u1" name="h_wind1" long_name="horizontal_wind" unit="m s-1" grid_ref="half_level_edge_grid"/>
    <field id="readlbc_h_u2" name="h_wind2" long_name="horizontal_wind" unit="m s-1" grid_ref="half_level_edge_grid"/>
    <field id="readlbc_h_u3" name="h_wind3" long_name="horizontal_wind" unit="m s-1" grid_ref="full_level_face_grid"/>
  </field_group>

  <!-- Initial lateral boundary conditions diagnostic group -->
  <field_group id="init_lbc_diags" freq_op="1ts" operation="once" enabled=".TRUE." >
    <field id="init_lbc_u1" name="lbc_u1" long_name="eastward_wind" standard_name="eastward_wind" unit="m s-1" grid_ref="half_level_edge_grid" />
    <field id="init_lbc_u2" name="lbc_u2" long_name="northward_wind" standard_name="northward_wind" unit="m s-1" grid_ref="half_level_edge_grid" />
    <field id="init_lbc_u3" name="lbc_u3" long_name="upward_air_velocity" standard_name="upward_air_velocity" unit="m s-1" grid_ref="full_level_face_grid" />
    <field id="init_lbc_theta" name="lbc_theta" long_name="air_potential_temperature" standard_name="air_potential_temperature" unit="K" grid_ref="full_level_face_grid" />
    <field id="init_lbc_m_v" name="lbc_m_v" long_name="m_v"  unit="kg kg-1" grid_ref="full_level_face_grid" />
    <field id="init_lbc_q" name="lbc_q" long_name="q"  unit="kg kg-1" grid_ref="full_level_face_grid" />
    <field id="init_lbc_rho" name="lbc_rho" long_name="air_density" standard_name="air_density" unit="kg m-3" grid_ref="half_level_face_grid" />
    <field id="init_lbc_rho_r2" name="lbc_rho_r2" long_name="air_density" standard_name="air_density" unit="kg m-3" grid_ref="half_level_face_grid" />
    <field id="init_lbc_exner" name="lbc_exner" long_name="exner_pressure" unit="1" grid_ref="half_level_face_grid" />
    <field id="init_readlbc_h_u" name="h_wind" long_name="horizontal_wind" unit="m s-1" grid_ref="half_level_edge_grid"/>
    <field id="init_readlbc_v_u" name="upward_wind" long_name="vertical_wind" standard_name="vertical_wind" unit="m s-1" grid_ref="full_level_face_grid"/>
    <field id="init_readlbc_h_u1" name="h_wind1" long_name="horizontal_wind" unit="m s-1" grid_ref="half_level_edge_grid"/>
    <field id="init_readlbc_h_u2" name="h_wind2" long_name="horizontal_wind" unit="m s-1" grid_ref="half_level_edge_grid"/>
    <field id="init_readlbc_h_u3" name="h_wind3" long_name="horizontal_wind" unit="m s-1" grid_ref="full_level_face_grid"/>
  </field_group>

  <!-- Lateral boundary condition masks diagnostic group -->
  <field_group id="masks" freq_op="1ts" operation="once" enabled=".TRUE." >
    <field id="w3_mask" name="w3_mask" long_name="w3_mask" unit="1"  grid_ref="half_level_face_grid"/>
    <field id="wtheta_mask" name="wtheta_mask" long_name="wtheta_mask" unit="1"  grid_ref="full_level_face_grid"/>
    <field id="w3lbc_mask" name="w3lbc_mask" long_name="w3lbc_mask" unit="1"  grid_ref="half_level_face_grid"/>
    <field id="wthetalbc_mask" name="wthetalbc_mask" long_name="wthetalbc_mask" unit="1"  grid_ref="full_level_face_grid"/>
    <field id="w3blend_mask" name="w3blend_mask" long_name="w3blend_mask" unit="1"  grid_ref="half_level_face_grid"/>
    <field id="wthetablend_mask" name="wthetablend_mask" long_name="wthetablend_mask" unit="1"  grid_ref="full_level_face_grid"/>
    <field id="onion_layers" name="onion_layers" long_name="onion_layers" unit="1"  grid_ref="half_level_face_grid"/>
    <field id="h_w2_mask" name="h_w2_mask" long_name="h_w2_mask" unit="1"  grid_ref="half_level_edge_grid"/>
    <field id="h_w2lbc_mask" name="h_w2lbc_mask" long_name="h_w2lbc_mask" unit="1"  grid_ref="half_level_edge_grid"/>
    <field id="h_w2boundary_mask" name="h_w2boundary_mask" long_name="h_w2boundary_mask" unit="1"  grid_ref="half_level_edge_grid"/>
    <field id="h_w2blend_mask" name="h_w2blend_mask" long_name="h_w2blend_mask" unit="1"  grid_ref="half_level_edge_grid"/>
    <field id="v_w2_mask" name="v_w2_mask" long_name="v_w2_mask" unit="1"  grid_ref="full_level_face_grid"/>
    <field id="v_w2lbc_mask" name="v_w2lbc_mask" long_name="v_w2lbc_mask" unit="1"  grid_ref="full_level_face_grid"/>
    <field id="v_w2blend_mask" name="v_w2blend_mask" long_name="v_w2blend_mask" unit="1"  grid_ref="full_level_face_grid"/>
    <field id="v_w2boundary_mask" name="v_w2boundary_mask" long_name="v_w2boundary_mask" unit="1"  grid_ref="full_level_face_grid"/>
  </field_group>

</field_definition>
